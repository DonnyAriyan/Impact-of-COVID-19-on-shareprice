{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Figure 2: Percentage (%) change in GDP for the 5 most affected countries, 2020",
  "width":250,
  "height":150,
  "data": {
    "url": "https://raw.githubusercontent.com/DonnyAriyan/Impact-of-COVID-19-on-shareprice/main/GDP%20per%20capita%20w%20Population%20and%20Dates%20FULLY%20FULLY%20UPDATED%20DONNY%20ARIYAN.csv"},
    "mark": "rect",
    "encoding": {
      "y": {
        "field": "Country(MostAffected)",

        "type": "nominal"
      },
      "x": {
        "field": "2020GDP",
        "type": "ordinal"
      },
      "color": {
        "aggregate": "mean",
        "field": "2020GDP"
      }
    },
    "config": {
      "axis": {
        "grid": true,
        "tickBand": "extent"
      }
    }
  }


